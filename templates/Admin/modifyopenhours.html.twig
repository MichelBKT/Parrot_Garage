{% extends 'base.html.twig' %}

{% block title %}Gestion des horaires d'ouverture{% endblock %}

{% block body %}
<body class="bg-primary">
    <div class="container">
        <div class="row justify-content-center">
    {% include "partials/adminNav.html.twig" %}
            <main class="col-lg-8 rounded p-2">
                <h2 class="text-success p-3 border-bottom">Gestion des horaires d'ouverture</h2>
                 <div class="table-responsive-md mt-5">
                <table class="table table-bordered table-striped table-dark text-white">
                    <thead>
                        <tr>
                            <th scope="col">Jour de la semaine</th>
                            <th scope="col">Plage horaire</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for horaire in horaires %}
                         <tr>   
                            <td>{{horaire.jourSemaine}}</td>
                            <td>{{horaire.plageHoraire}}</td>
                            <td><a href="{{path('admin_modifyOpenHours_selected', {'id': horaire.id})}}" class="btn btn-success">Modifier</a></td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </main>    
        </div>
    </div>
</body>
{% endblock %}
