{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
<body class="bg-primary">
    <div class="container">
        <div class="row justify-content-center">
    {% include "partials/adminNav.html.twig" %}
            <main class="col-lg-8 rounded p-2">
                <h2 class="text-success p-3">Liste des utilisateurs</h2>
                <a href="#" class="btn btn-light">Ajouter un utilisateur</a>
                 <div class="table-responsive-md">
                <table class="table table-bordered table-striped table-dark text-white">
                    <thead>
                        <tr>
                            <th scope="col">Identifiant</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Pr√©nom</th>
                            <th scope="col">Email</th>
                            <th scope="col">Poste</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                        {% for user in users %}
                            <td>{{ app.user.id }}</td>
                            <td>{{ app.user.nom }}</td>
                            <td>{{ app.user.prenom }}</td>
                            <td>{{ app.user.email }}</td>
                            <td>{{ app.user.poste.libelle }}</td>
                            <td><a href="#" class="btn btn-success">Modifier</a></td>
                            <td><a href="#" class="btn btn-danger">Supprimer</a></td>
                        {% endfor %}
                        </tr>
                    </tbody>
                </table>
            </main>    
        </div>
    </div>
</body>
{% endblock %}
