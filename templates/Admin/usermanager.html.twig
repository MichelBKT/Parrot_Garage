{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
<body class="bg-primary">
    <div class="container">
        <div class="row justify-content-center">
    {% include "partials/adminNav.html.twig" %}
            <main class="col-lg-8 rounded p-2">
                <h2 class="text-success p-3 border-bottom">Gestion des utilisateurs</h2>
                    {% for notice in app.flashes('notice') %}
                        <div>
                            {{ block ("alertSuccess", "config/common_block.html.twig") }}
                        </div>
                    {% endfor %}
                <a href="{{path('app_user_add')}}" class="btn btn-light mb-3 mt-3">Ajouter un utilisateur</a>
                 <div class="table-responsive-md mt-2">
                <table class="table table-bordered text-white text-center">
                    <thead>
                        <tr>
                            <th scope="col" class="bg-secondary text-success">Identifiant</th>
                            <th scope="col" class="bg-secondary text-success">Nom</th>
                            <th scope="col" class="bg-secondary text-success">Pr√©nom</th>
                            <th scope="col" class="bg-secondary text-success">E-mail</th>
                            <th scope="col" class="bg-secondary text-success">Poste</th>
                            <th scope="col" class="bg-secondary text-success" colspan="2" class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.nom }}</td>
                            <td>{{ user.prenom }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.poste.libelle }}</td>
                            <td><a href="{{path('admin_userModify_selected', {'id': user.id})}}" class="btn btn-outline-success">Modifier</a></td>
                            <td><a onclick="return confirm('Confirmez-vous la suppression?')" href="{{path('app_user_delete',{'id': user.id})}}" class="btn btn-outline-danger">Supprimer</a></td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </main>    
        </div>
    </div>
</body>
{% endblock %}
