{% extends 'base.html.twig' %}

{% block title %}Modification d'un utlilisateur{% endblock %}

{% block body %}
<body class="bg-primary">
    <main class="container">
        <div class="row row-cols-4 justify-content-center">
            {% if is_granted('ROLE_ADMIN') %}
                {% include "partials/adminNav.html.twig" %}
                </aside>
                </div>
                </div>
            {% endif %}
            <div class="row justify-content-center">
                <div class="col-lg-8 rounded p-2 text-white">
                    <h2 class="text-success p-3 border-bottom">Modification d'un utilisateur</h2>
                    {% for notice in app.flashes('notice') %}
                    <div>
                        {{ block ("alertSuccess", "config/common_block.html.twig") }}
                    </div>
                    {% endfor %}
                    {{ form_start(form) }}

                        {{ form_row(form.nom) }}
                        {{ form_row(form.prenom) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.password)}}
                        {{ form_row(form.poste) }}
                    <button type="submit" class="btn btn-success">Valider la modification</button>

                    {{ form_end(form) }}
                </div>
            </div>    
        </div>
    </main>
</body>
{% endblock %}