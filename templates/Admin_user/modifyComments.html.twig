{% extends 'base.html.twig' %}

{% block title %}Liste des avis client{% endblock %}

{% block body %}
<body class="bg-primary">
    <main class="container">
        <div class="row row-cols-4 justify-content-center">
            {% if is_granted('ROLE_ADMIN') %}
                {% include "partials/adminNav.html.twig" %}
                    </aside>
                    </div>
            {% else %} {% include "partials/userNav.html.twig" %}   
                            </aside>
                            </div> 
            {% endif %}
            <div class="row justify-content-center">
                <div class="col-lg-8 rounded p-2">
                    <h2 class="text-success p-3 border-bottom">Liste des avis client</h2>
                    <div class="table-responsive-md mt-5">
                        <table class="table table-bordered text-white">
                            <thead>
                                <tr>
                                    <th scope="col" class="text-success bg-secondary">Auteur</th>
                                    <th scope="col" class="text-success bg-secondary">Commentaire</th>
                                    <th scope="col" class="text-success bg-secondary">Note</th>
                                    <th scope="col" class="text-success bg-secondary">Publi√© en ligne</th>
                                    <th scope="col" class="text-success bg-secondary">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for avisClient in avisClients %}
                                    <tr>
                                        <td>{{ avisClient.auteur }}</td>
                                        <td>{{ avisClient.libelle }}</td>
                                        <td>{{ avisClient.note }}/5</td>
                                        <td>
                                            {% if avisClient.actif == true %}Oui
                                            {% else %}
                                                Non
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a 
                                                href="{{path('user_comments_edit', {'id': avisClient.id})}}" 
                                                class="btn btn-outline-success">Modifier
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>    
                </div>
            </div>
        </div>
    </main>
</body>
{% endblock %}