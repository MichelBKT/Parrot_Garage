{% extends 'base.html.twig' %}

{% block title %}Liste des avis client{% endblock %}

{% block body %}
<body class="bg-primary">
    <div class="container">
        <div class="row justify-content-center">
            {% if is_granted('ROLE_ADMIN') %}
            {% include "partials/adminNav.html.twig" %}
            {% else %}
            {% include "partials/userNav.html.twig" %}    
            {% endif %}
            <main class="col-lg-8 rounded p-2">
                <h2 class="text-success p-3 border-bottom">Liste des avis client</h2>
                 <div class="table-responsive-md mt-5">
                <table class="table table-bordered table-striped table-dark text-white">
                    <thead>
                        <tr>
                            <th scope="col">Identifiant</th>
                            <th scope="col">Auteur</th>
                            <th scope="col">Commentaire</th>
                            <th scope="col">Note</th>
                            <th scope="col">Publi√© en ligne</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for avisClient in avisClients %}
                        <tr>
                            <td>{{ avisClient.id }}</td>
                            <td>{{ avisClient.auteur }}</td>
                            <td>{{ avisClient.libelle }}</td>
                            <td>{{ avisClient.note }}/5</td>
                            <td>{% if avisClient.actif == true %}Oui
                            {% else %}
                                Non
                            {% endif %}
                            </td>
                            <td><a href="{{path('user_comments_edit', {'id': avisClient.id})}}" class="btn btn-success">Modifier</a></td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </main>    
        </div>
    </div>
</body>
{% endblock %}