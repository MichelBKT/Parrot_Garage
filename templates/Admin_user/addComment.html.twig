{% extends 'base.html.twig' %}

{% block title %}Gérer les avis client{% endblock %}

{% block body %}
<body class="bg-primary">
    <div class="container">
        <div class="row row-cols-4 justify-content-center">

            {% if is_granted('ROLE_ADMIN') %}
                {% include "partials/adminNav.html.twig" %}
                    </aside>
                    </div>
            {% else %} {% include "partials/userNav.html.twig" %}   
                    </aside>
                    </div> 
            {% endif %}
            <main class="col-lg-8 rounded p-2">
                <h2 class="text-success p-3 border-bottom">Gérer les avis client</h2>
                    {% for notice in app.flashes('notice') %}
                        <div>
                            {{ block ("alertSuccess", "config/common_block.html.twig") }}
                        </div>
                {% endfor %}
                <div class="text-white">
                    {{ form_start(formView)}}

                        {{ form_row(formView.auteur)}}
                        {{ form_row(formView.note)}}
                        {{ form_row(formView.libelle)}}
                        {{ form_row(formView.actif)}}
                        <button type="submit" class="btn btn-success">Valider</button>

                    {{ form_end(formView) }}
                </div>
            </main>    
        </div>
    </div>
</body>
{% endblock %}
