{% block body %}

<header>
  <nav class="navbar mb-5 navbar-expand-lg navbar-dark bg-dark text-white border-bottom sticky-top">
      <div class="container-fluid">
          <a href="/" class="navbar-brand">
            <img
              src=" {{ asset('build/images/logo_complet_rect.png') }} " 
              width="278" 
              height="100" 
              alt="logo" 
              class="mx-lg-2"
            >
          </a>
        <button 
          class="navbar-toggler" 
          type="button" 
          data-bs-toggle="collapse" 
          data-bs-target="#navbarNavDropdown" 
          aria-controls="navbarNavDropdown" 
          aria-expanded="false" 
          aria-label="Toggle navigation"
          >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link mx-lg-2" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link mx-lg-2" href="{{path('app_vehicules_all')}}">Véhicules d'occasion</a>
            </li>
            <li class="nav-item">
              <a class="nav-link mx-lg-2" href="{{path('app_entretiens_services')}}">Entretiens et services</a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle mx-lg-2" href="#" role="button" data-bs-toggle="dropdown">Nous contacter</a>
              <ul class="dropdown-menu bg-dark">
                <li>
                  <a class="dropdown-item" href="tel:0383838282">Par téléphone</a>
                </li>
                <li>
                  <a class="dropdown-item" href="{{path('app_form')}}">Nous écrire</a>
                </li>
                <li>
                  <a class="dropdown-item" href="/#plan-toulouse">Nous localiser</a>
                </li>
              </ul>
            </li>
            <li class="nav-item">
              <a class="nav-link mx-lg-2" href="{{path('app_login')}}">Se connecter</a>
            </li> 
          </ul>
            
          {% if app.user %}
            <p class="text-success fw-bold mx-2">
              Bonjour {{app.user.prenom}} {{app.user.nom|first}}.</br> {{app.user.poste.libelle}}
            </p>
            <ul class="navbar-nav">
              <li class="nav-item">
                <a 
                  class="nav-link mx-lg-0" 
                  aria-current="page" 
                  href=" {% if is_granted('ROLE_USER') %} {{ path('user_')}}
                         {% endif %}"
                  >Mon compte
                </a>
              </li>
              <li class="nav-item" class="icon-mail">
                <a href=" {% if is_granted('ROLE_USER') %} {{ path('user_')}}
                          {% endif %}"
                   class="nav-link mx-lg-0"
                  >
                  <img src="{{asset('build/images/icon mail.png')}}" alt="">
                </a>
              </li>
              <li class="nav-item">
                <a 
                  class="nav-link mx-lg-0" 
                  aria-current="page" 
                  href="{{path('app_logout')}}"
                  >Se déconnecter
                </a>
              </li>
            </ul>
          {% endif %}
        </div>
      </div>
  </nav>
</header>

{% endblock %}

